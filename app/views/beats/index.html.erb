<h1>Listing beats</h1>

<table>
  <tr>
    <th>Content</th>
    <th>User</th>
  </tr>

<% @beats.each do |beat| %>
  <tr>
    <td><%=h beat.content %></td>
    <td><%=h beat.user_id %></td>
    <td><%= link_to 'Show', beat %></td>
    <td><%= link_to 'Edit', edit_beat_path(beat) %></td>
    <td><%= link_to 'Destroy', beat, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New beat', new_beat_path %>